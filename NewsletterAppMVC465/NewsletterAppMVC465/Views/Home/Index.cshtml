<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign up for our newsletter</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))   
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name"/>
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }

        </div>
    </div>

</div>

<!--RAZOR NOTES-->
<!--line 6 : Html.BeginForm = create a new form-->
<!--line 6: SignUp= method we will create to call || line 6 "Home" = where that method is found (home controller)-->
<!--line 6 : FormMethod.Post = method we call to Post information to server using this form-->

<!--BOOTSTRAP NOTES-->
<!--col-sm 12 = on small device make it take up 12 columns, then md=medium lg=large-->
<!--mx-auto =margin on x axis is set to auto(equal on both sides) this centers it -->
<!--h5 class=m-0 = put margins at 0 (they often come with some when using h tags)-->
<!--NO GUTTERS= takes away the naturally inserted margins/padding stuff that bootstrap automatically has on certain elements-->