@using NewsletterAppMVC465.ViewModels
@model List<SignupVm>


<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0>Sign Ups"</h5>
        </div>
        <div class="card-body">
            @foreach (var signup in Model) //signup is iterator here Model is above List<NewsletterSignUp>
            {
                using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@signup.Id" /> //form needs input type but dont show (hidden)
                    <div class="row mb-3">
                        <!--make row with three columns for each prop-->
                        <div class="col-2">
                            @signup.FirstName  <!--first col filled with iterator.FirstName-->
                        </div>
                        <div class="col">
                            @signup.LastName
                        </div>

                        <div class="col-4">
                            @signup.EmailAddress
                        </div>
                        <div class="col">
                            <button type="submit" class="btn-block btn-danger btn-block">
                                Unsubscribe
                            </button>
                        </div>
                    </div>
                }

            }

        </div>
    </div>
</div>
